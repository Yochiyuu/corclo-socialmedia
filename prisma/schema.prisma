// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Model untuk Tipe Media (Enum)
enum MediaType {
  IMAGE
  VIDEO
}

// Model untuk Pengguna
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  name      String
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  posts     Post[] 
}

// Model untuk Postingan
model Post {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  
  // Relasi: Postingan ini dibuat oleh...
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int

  // Media (opsional)
  mediaType MediaType?
  mediaUrl  String?
}